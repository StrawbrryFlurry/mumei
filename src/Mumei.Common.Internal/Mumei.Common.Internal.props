<Project>
  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Collections.Immutable"/>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="$(SolutionDir)/src/Mumei.Common.Internal/**/*.cs" Visible="false"/>

    <!-- Exclude auto-generated assembly info files which would be included with **/*.cs -->
    <Compile Remove="$(SolutionDir)/src/Mumei.Roslyn.Common/**/*.AssemblyInfo.cs"/>
    <Compile Remove="$(SolutionDir)/src/Mumei.Roslyn.Common/**/*.AssemblyAttributes.cs"/>
  </ItemGroup>
</Project>