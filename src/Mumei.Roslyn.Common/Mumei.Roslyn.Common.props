<Project>
    <PropertyGroup>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="$(SolutionDir)/src/Mumei.Roslyn.Common/**/*.cs"/>

        <!-- Exclude auto-generated assembly info files which would be included with **/*.cs -->
        <Compile Remove="$(SolutionDir)/src/Mumei.Roslyn.Common/**/*.AssemblyInfo.cs"/>
        <Compile Remove="$(SolutionDir)/src/Mumei.Roslyn.Common/**/*.AssemblyAttributes.cs"/>
    </ItemGroup>
</Project>